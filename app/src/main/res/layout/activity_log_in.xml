<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.LogInActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@mipmap/ic_launcher" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
           android:id="@+id/et_phone"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="#000"
            android:textColorHint="@color/sendotp_grey"
            android:background="@drawable/bg_et1"
            android:drawableLeft="@drawable/iv_person"
            android:drawableTint="#808080"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="@dimen/_7sdp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_password"
            android:textColor="#000"
            android:textColorHint="@color/sendotp_grey"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:background="@drawable/bg_et1"
            android:drawableLeft="@drawable/ic_password"
            android:drawableTint="#808080"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="@dimen/_7sdp"
            android:singleLine="true" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/bg_et"
            android:onClick="login"
            android:text="LOGIN" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:gravity="right"
            android:textColor="@color/sendotp_grey"
            android:onClick="forgetpassword"
            android:text="forget password?" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/_25sdp"
        android:gravity="center_horizontal"
android:textColor="@color/sendotp_grey"
        android:onClick="signup"
        android:text="@string/donthaveaccountsignup" />

</FrameLayout>